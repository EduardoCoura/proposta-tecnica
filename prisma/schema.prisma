generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // ID Ãºnico universal
  name      String
  email     String   @unique              
  password  String                        
  createdAt DateTime @default(now())      
  updatedAt DateTime @updatedAt           
}